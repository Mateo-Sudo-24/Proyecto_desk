# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# BASE DE DATOS (Prisma)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/ecuatechnology?schema=public"

# ============================================
# AUTENTICACIÓN Y SEGURIDAD
# ============================================
# JWT para empleados/admins (app de escritorio)
JWT_SECRET=tu-super-secreto-jwt-256-bits-minimo-aqui-cambialo
JWT_EXPIRES_IN=8h

# Session para clientes (portal web)
SESSION_SECRET=otro-secreto-muy-fuerte-para-sesiones-de-clientes

# Bcrypt rounds (10-12 es recomendado, más = más seguro pero más lento)
BCRYPT_ROUNDS=12

# ============================================
# FRONTEND URLs (para CORS)
# ============================================
URL_FRONTEND_WEB=http://localhost:5173
URL_FRONTEND_DESK=http://localhost:5174

# ============================================
# EMAIL (Nodemailer)
# ============================================
# Configuración SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@empresa.com
SMTP_PASSWORD=tu-password-de-aplicacion

# Emails específicos
IT_ADMIN_EMAIL=admin@ecuatechnology.com
SUPPORT_EMAIL=soporte@ecuatechnology.com
NOREPLY_EMAIL=noreply@ecuatechnology.com

# ============================================
# LÍMITES Y CONFIGURACIONES
# ============================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Tamaño máximo de archivos
MAX_FILE_SIZE=10mb

# ============================================
# LOGS Y MONITOREO
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Sentry (opcional, para producción)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# FEATURES FLAGS
# ============================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PDF_GENERATION=true

# ============================================
# PRISMA
# ============================================
# Prisma Studio (herramienta de desarrollo)
# npx prisma studio
PRISMA_STUDIO_PORT=5555