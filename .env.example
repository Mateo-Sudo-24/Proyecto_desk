# Ejemplo de .env seguro para tu proyecto

# Clave secreta para sesiones y JWT
SESSION_SECRET=pon_aqui_una_clave_larga_y_segura
JWT_SECRET=pon_aqui_otra_clave_larga_y_segura

# Configuración de SQL Server
DATABASE_URL="sqlserver://usuario:contraseña@localhost:1433;database=ServicioTecnicoDB;trustServerCertificate=true"

# Configuración de correo (SMTP o Zimbra)
SMTP_HOST=smtp.tuservidor.com
SMTP_PORT=587
SMTP_USER=usuario_smtp
SMTP_PASS=contraseña_smtp
ZIMBRA_HOST=mail.tuzimbra.com
ZIMBRA_PORT=465
ZIMBRA_USER=usuario_zimbra
ZIMBRA_PASS=contraseña_zimbra
EMAIL_FROM="Soporte Ecuatechnology" <no-reply@ecuatechnology.com>

# URL del frontend
URL_FRONTEND=http://localhost:3000
